<div id="new-team-form">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title"></h3>
      <h3 class="modal-title">Let's create a new team for <span style="font-style: italic"><%=@course.title%> on <%=@course.platform%></span>.</h3>
      <p>Other students will be able to see and join your team so you can start studying together. ğŸ’ª</p>
    </div>
    <div class="modal-input">
      <%= simple_form_for @team, url: create_team_path(@course) do |f| %>
        <%= f.input :start_date, as: :string, input_html: { class: "datepicker", value: Date.today } %>
        <%= f.input :time_of_the_day, as: :integer, input_html: { class: "timepicker", value: '12', enableTime: true, noCalendar: true, dateFormat: "H:i K" } %>
        <%= f.input :duration, as: :integer, input_html: { class: "durationpicker", value: '1', enableTime: true, noCalendar: true, dateFormat: "i" } %>
        <div class="tm-btn"><%= f.submit "Submit", class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div><!-- /.modal-content -->
</div>
