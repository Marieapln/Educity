<div id="new-team-form">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title"></h3>
      <h3 class="modal-title">Let's create a new team for <span style="font-style: italic"><%=@course.title%> on <%=@course.platform%></span>.</h3>
      <p>Other students will be able to see and join your team so you can start studying together. ğŸ’ª</p>
    </div>
    <div class="modal-input">
      <%= simple_form_for @team, url: create_team_path(@course) do |f| %>
            <%= f.input :day_of_the_week,
              as: :radio_buttons,
              collection: Team::DAY_OF_THE_WEEK, value_method: :first, label_method: :second,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'days-wrapper',
              item_wrapper_class: 'platform-item',
              input_html: {class: 'quizz-css'}%>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker f-input", value: Date.today } %>
        <%= f.input :time_of_the_day, as: :integer %>
        <%= f.input :duration, as: :integer%>
        <div class="tm-btn"><%= f.submit "Submit", class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div><!-- /.modal-content -->
</div>
